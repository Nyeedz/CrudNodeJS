extends ../default

block content

  include ../templates/nav

  .ui.container.grid.stackble
    .row
    .sixteen.wide.column
      h2.ui.header.blue.dividing Editar Produto
    .two.wide.column
    .eleven.wide.column
      .form-novoproduto
        form.ui.form(action='/editar/', method='post' autocomplete='off')
          .ui.field
            label.ui.field(for='nome') Nome do Produto
            input(type='text', name='nome', placeholder='Nome', value= produto[0].nome)
          .ui.two.fields
            .ui.field
              label(for='preco') Preço
              input(type='text', name='preco', placeholder='Preço', value= produto[0].preco)
            .ui.field
              label(for='estoque') Estoque
              input(type='text', name='estoque', placeholder='Estoque', value= produto[0].estoque)
              input(type='hidden', name='id_produtos', value= produto[0].id_produtos)
          button.ui.button.basic.green Editar Produto
          .ui.message.error
